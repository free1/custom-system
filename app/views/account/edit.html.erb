<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put}) do |f| %>

  <fieldset>
    <legend>编辑个人资料</legend>

    <%= f.input :username %>
    <%= f.input :email %>
    <%= image_tag(@user.avatar_url(:thumb)) if @user.avatar? %>
    <%= f.input :avatar %>

    <div><%= f.submit "更新资料" %></div>
  </fieldset>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name, :by => :pwd), :html => { :method => :put }) do |f| %>
  <fieldset>
    <legend>修改密码</legend>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :current_password %>

    <%= f.input :password %>

    <%= f.input :password_confirmation %>

    <div><%= f.submit "修改密码" %></div>
  </fieldset>
<% end %>

<h3>取消我的账户</h3>

<p>不喜欢? <%= button_to "删除此账号", registration_path(resource_name), :data => { :confirm => "确定要删除此账号?" }, :method => :delete %></p>

<%= link_to "Back", :back %>