<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>
  <fieldset>
    <legend>登录</legend>

    <%= f.input :login %>
    <%= f.input :password %>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, '记住我' %></div>
    <% end -%>

    <div><%= f.submit "登录" %></div>

    <%= link_to "使用github登录", user_omniauth_authorize_path(:github) %>

  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
